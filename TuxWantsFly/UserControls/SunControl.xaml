<UserControl x:Class="TuxWantsFly.UserControls.SunControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TuxWantsFly.UserControls"
             mc:Ignorable="d" DataContext="{Binding Sun, Source={StaticResource Locator}}"
             d:DesignHeight="360" d:DesignWidth="360">
    <Grid>
        <Ellipse Width="210" Height="210" Fill="#FFF0E618" Stroke="#FFF08E18" StrokeThickness="10" RenderTransformOrigin="0.5, 0.5" Panel.ZIndex="10" />
        <Ellipse Width="220" Height="220" Fill="#FFFFFF" Panel.ZIndex="9" />
        <Polygon Points="30, 30, 180, 130, 130, 180" Fill="#FFF08E18" />
        <Polygon Points="330, 330, 230, 180, 180, 230" Fill="#FFF08E18" />
        <Polygon Points="330, 30, 180, 130, 230, 180" Fill="#FFF08E18" />
        <Polygon Points="30, 330, 130, 180, 180, 230" Fill="#FFF08E18" />
        <Polygon Points="180, 30, 130, 180, 230, 180" Fill="#FFF08E18" />
        <Polygon Points="330, 180, 180, 130, 180, 230" Fill="#FFF08E18" />
        <Polygon Points="180, 330, 130, 180, 230, 180" Fill="#FFF08E18" />
        <Polygon Points="30,180, 180, 130, 180, 230" Fill="#FFF08E18" />
    </Grid>
</UserControl>
